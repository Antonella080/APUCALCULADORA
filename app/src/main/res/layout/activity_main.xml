<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numero1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingresa un numero"
        android:inputType="number"
        android:textColor="#8BC34A" />

    <EditText
        android:id="@+id/numero2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingresa un numero"
        android:inputType="number"
        android:textColor="#8BC34A" />

    <TextView
        android:id="@+id/respuesta"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="0"
        android:textColor="#FF9800"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button_suma"
        android:layout_width="245dp"
        android:layout_height="62dp"
        android:rotation="-25"
        android:rotationX="-4"
        android:rotationY="-33"
        android:shadowColor="#FFEB3B"
        android:text="suma"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFC107"
        android:textColorHint="#FFEB3B"
        android:textColorLink="#FF9800"
        android:translationX="80dp"
        android:translationY="40dp"
        app:backgroundTint="#DEF325"
        app:strokeColor="#FFEB3B" />

    <Button
        android:id="@+id/button_resta"
        android:layout_width="245dp"
        android:layout_height="59dp"
        android:rotationX="21"
        android:rotationY="33"
        android:text="resta"
        android:translationX="56dp"
        android:translationY="80dp"
        app:backgroundTint="#CDDC39" />

    <Button
        android:id="@+id/button_division"
        android:layout_width="245dp"
        android:layout_height="63dp"
        android:rotation="-25"
        android:rotationX="-4"
        android:rotationY="-33"
        android:text="división"
        android:translationX="80dp"
        android:translationY="120dp"
        app:backgroundTint="#8BC34A" />

    <Button
        android:id="@+id/button_multiplicacion"
        android:layout_width="245dp"
        android:layout_height="66dp"
        android:rotationX="21"
        android:rotationY="33"
        android:text="multiplicación"
        android:translationX="56dp"
        android:translationY="170dp"
        app:backgroundTint="#4CAF50" />

</LinearLayout>